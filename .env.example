# FitFolio Configuration

# Web Application
FITFOLIO_PORT=8000

# Database (PostgreSQL - optional, SQLite used by default)
POSTGRES_DB=fitfolio
POSTGRES_USER=fitfolio
POSTGRES_PASSWORD=fitfolio123
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# HCGateway Integration
# Set this to your HCGateway instance URL
# Default: https://api.hcgateway.shuchir.dev (public instance)
# Self-hosted: http://your-hcgateway-server:port
HCGATEWAY_API_URL=https://api.hcgateway.shuchir.dev

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Health Data Sync Settings
# Sync interval in seconds (default: 7200 = 2 hours)
HEALTH_SYNC_INTERVAL=7200